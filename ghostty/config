# Ghostty config - iTerm2-like setup

# Font configuration (similar to iTerm2 defaults)
font-family = "SF Mono"
font-size = 13

# Window appearance
window-padding-x = 8
window-padding-y = 8
window-decoration = false
window-title-font-family = system
window-theme = system

# Colors (iTerm2 default theme)
foreground = ffffff
cursor-color = ffffff

# Background settings
background = /home/hel-asli/Downloads/1.png
background-opacity = 0.9
background-blur-radius = 20

# Terminal behavior
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Scrollback
scrollback-limit = 10000

# Mouse support
mouse-hide-while-typing = true

# Tab behavior (similar to iTerm2)
tab-width = 8

# Bell
audible-bell = false
visual-bell = true

# Clipboard
clipboard-read = allow
clipboard-write = allow

# URL handling
auto-update = check

# Performance
macos-non-native-fullscreen = false

# Keybindings
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+d=new_split:right
keybind = ctrl+shift+shift+d=new_split:down
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right
